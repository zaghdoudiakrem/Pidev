{% block body %}
 <div class="container">
    <h1>Locale index</h1>
	 <input type="text" id="search" class="form-control" placeholder="Search">

   <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-primary" href="{{ path('app_locale_new') }} "> 
                    créer un nouveau locale
                </a>
            </div>
            <div class="card-body">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adresse</th>
                <th>Consulter</th>
				<th>Modifier</th>
				<th>Supprimer</th>
            </tr>
        </thead>
		<tbody id="all">
        {% for locale in locales %}
            <tr>
                <td>{{ locale.id }}</td>
                <td>{{ locale.adresse }}</td>

				 <td>
                 <form method="post" action="{{ path('app_locale_delete', {'id': locale.id}) }}" onsubmit="return confirm('Are you sure you want to delete this locale?');">
                    <a  class="btn btn-outline-info" href="{{ path('app_locale_show', {'id': locale.id}) }}"><i class="bi bi-eye-fill"></i></a>
				</td>
                 <td >
                <a class="btn btn-outline-success " href="{{ path('app_locale_edit', {'id': locale.id}) }}"><i class="bi bi-pencil-square"></i></a>
              	</td>

				<td>
                     <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ locale.id) }}">
                        <button class="btn btn-outline-danger"><i class="bi bi-trash3-fill"></i></button>
                  </form>
				  </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
		<tbody id="searchtab">
</tbody>

    </table>
