{{ form_start(form) }}
    {% for item in form.items %}
        <div class="devis-item">
            {{ form_label(item.description) }}
            {{ form_widget(item.description) }}
            {% if form_errors(item.description) %}
                <div class="alert alert-danger">
                    {{ form_errors(item.description) }}
                </div>
            {% endif %}
{{ form_end(form) }}
