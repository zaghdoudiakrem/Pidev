              	</td>

				<td>
                     <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ locale.id) }}">
                        <button class="btn btn-outline-danger"><i class="bi bi-trash3-fill"></i></button>
                  </form>
				  </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
		<tbody id="searchtab">
</tbody>

    </table>
