        </thead>
		<tbody id="all">
        {% for locale in locales %}
            <tr>
                <td>{{ locale.id }}</td>
                <td>{{ locale.adresse }}</td>

				 <td>
                 <form method="post" action="{{ path('app_locale_delete', {'id': locale.id}) }}" onsubmit="return confirm('Are you sure you want to delete this locale?');">
