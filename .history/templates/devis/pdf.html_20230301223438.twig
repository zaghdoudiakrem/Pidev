


  <style>
table {
  border-collapse: collapse;
  width: 100%;
  margin-bottom: 1rem;
  color: #212529;
  background-color: transparent;
}

th, td {
  padding: .75rem;
  vertical-align: top;
  border-top: 1px solid #dee2e6;
}

th {
  font-weight: bold;
  border-bottom: 2px solid #dee2e6;
}

thead th {
  vertical-align: bottom;
  border-bottom: 2px solid #dee2e6;
}

.table-striped tbody tr:nth-of-type(odd) {
  background-color: rgba(0, 0, 0, 0.05);
}

.text-right {
  text-align: right!important;
}

.font-weight-bold {
  font-weight: bold!important;
}
</style>
  <h1>Devis</h1>
  <p><strong>ID:</strong> {{ devi.id }}</p>
  <p><strong>Date:</strong> {{ devi.date|date('d/m/Y') }}</p>
  <p><strong>Mécanicien:</strong> {{ devi.idMecanicien.nom }} {{ devi.idMecanicien.prenom }}</p>
  <p><strong>Expert:</strong> {{ devi.idExpert.nom_expert ~ " " ~ devi.prenom_expert }}</p>
  <h2>Items</h2>
  <table >
    <thead>
      <tr>
        <th>Description</th>
        <th>Quantité</th>
        <th>Prix unitaire</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      {% for item in devi.items %}
        <tr>
          <td>{{ item.description }}</td>
          <td>{{ item.quantite }}</td>
          <td>{{ item.unitPrice }} €</td>
          <td>{{ item.totalPrice }} €</td>

        </tr>
      {% endfor %}
      
    </tbody>
    <br>
    <tfoot>
      <tr>
        <th colspan="5" class="text-right font-weight-bold">Total HT:</th>
        <td>{{ devi.totalHt }} €</td>
      </tr>
    </tfoot>
  </table>

