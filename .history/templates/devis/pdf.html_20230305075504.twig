<style>
		* {
			box-sizing: border-box;
			font-family: Arial, sans-serif;
			margin: 0;
			padding: 0;
		}
		body {
			background-color: #f5f5f5;
			color: #333;
			font-size: 16px;
			line-height: 1.4;
			margin: 0;
			padding: 2rem;
		}
		h1 {
			color: #f59943;
			font-size: 2.5rem;
			font-weight: bold;
			margin-bottom: 2rem;
			text-align: center;
		}
		h2 {
			color: #f59943;
			font-size: 1.8rem;
			font-weight: bold;
			margin-bottom: 1rem;
		}
		p {
			margin-bottom: 1rem;
		}
		table {
			background-color: #fff;
			border-collapse: collapse;
			margin-bottom: 2rem;
			width: 100%;
		}
		th, td {
			border: 1px solid #ccc;
			padding: 0.5rem;
			text-align: left;
			vertical-align: top;
		}
		th {
			background-color: #f5f5f5;
			font-weight: bold;
			text-align: center;
		}
		tbody tr:nth-child(even) {
			background-color: #f5f5f5;
		}
		tfoot tr {
			background-color: #f5f5f5;
			font-weight: bold;
		}
		.total-row td {
			font-weight: bold;
			text-align: right;
		}
		.logo {
			display: block;
			margin-bottom: 2rem;
			text-align: center;
		}
		.logo img {
			max-width: 100%;
			height: auto;
			max-height: 5rem;
		}
	</style>
  
 <!-- Add the logo to the template -->
<img src="{{ asset ('assets/img/logo_png.png') }}" alt="">

<h1 class="display-4">Devis</h1>
  <p><strong>ID:</strong> {{ devi.id }}</p>
  <p><strong>Date:</strong> {{ devi.date|date('d/m/Y') }}</p>
  <p><strong>Mécanicien:</strong> {{ devi.idMecanicien.nom }} {{ devi.idMecanicien.prenom }}</p>
  <p><strong>Expert:</strong> {{ devi.nom_expert ~ " " ~ devi.prenom_expert }}</p>
  <h2>Items</h2>
  <table >
    <thead>
      <tr>
        <th>Description</th>
        <th>Quantité</th>
        <th>Prix unitaire</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      {% for item in devi.items %}
        <tr>
          <td>{{ item.description }}</td>
          <td>{{ item.quantite }}</td>
          <td>{{ item.unitPrice }} €</td>
          <td>{{ item.totalPrice }} €</td>

        </tr>
      {% endfor %}
      
    </tbody>
    <br>
    <tfoot>
      <tr class="total-row">
        <th colspan="3" class="text-right font-weight-bold">Total HT:</th>
        <td colspan="2">{{ devi.totalHt }} €</td>
      </tr>
    </tfoot>
  </table>

