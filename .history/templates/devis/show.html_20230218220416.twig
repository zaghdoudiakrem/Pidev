                <th>Description</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            {% for item in devi.items %}
                <tr>
                    <td>{{ item.description }}</td>
                    <td>{{ item.quantite }}</td>
                    <td>{{ item.unitPrice }}</td>
                    <td>{{ item.totalPrice }}</td>
                </tr>
            {% endfor %}
			<tr>
                        <td colspan="3" class="text-right font-weight-bold">Total HT:</td>
