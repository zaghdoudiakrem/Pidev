<style>
  /* Set the background color of the page */
  body {
    background-color: #F5F5F5;
  }
  
  /* Set the font color and font family of the headings */
  h1, h2 {
    color: #336699;
    font-family: Arial, sans-serif;
  }
  
  /* Set the background color and font color of the table */
  table {
    background-color: #FFFFFF;
    color: #212529;
  }
  
  /* Set the background color of the table header */
  th {
    background-color: #CCCCCC;
  }
  
  /* Set the background color of the odd rows in the table */
  tbody tr:nth-of-type(odd) {
    background-color: #F5F5F5;
  }
  
  /* Set the font weight of the total HT row */
  .font-weight-bold {
    font-weight: bold;
  }
  
  /* Set the font color of the total HT amount */
  tfoot td:last-of-type {
    color: #336699;
  }
  
  /* Set the logo size and position */
  .logo {
    position: absolute;
    top: 20px;
    left: 20px;
    width: 100px;
    height: 100px;
  }
</style>
 <!-- Add the logo to the template -->
<img class="logo" src="/public/assets/img\testimonials\logo.PNG" alt="Logo">

<h1 class="display-4">Devis</h1>
  <p><strong>ID:</strong> {{ devi.id }}</p>
  <p><strong>Date:</strong> {{ devi.date|date('d/m/Y') }}</p>
  <p><strong>Mécanicien:</strong> {{ devi.idMecanicien.nom }} {{ devi.idMecanicien.prenom }}</p>
  <p><strong>Expert:</strong> {{ devi.nom_expert ~ " " ~ devi.prenom_expert }}</p>
  <h2>Items</h2>
  <table >
    <thead>
      <tr>
        <th>Description</th>
        <th>Quantité</th>
        <th>Prix unitaire</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      {% for item in devi.items %}
        <tr>
          <td>{{ item.description }}</td>
          <td>{{ item.quantite }}</td>
          <td>{{ item.unitPrice }} €</td>
          <td>{{ item.totalPrice }} €</td>

        </tr>
      {% endfor %}
      
    </tbody>
    <br>
    <tfoot>
      <tr>
        <th colspan="5" class="text-right font-weight-bold">Total HT:</th>
        <td colspan="2">{{ devi.totalHt }} €</td>
      </tr>
    </tfoot>
  </table>

