					<td>{{rendezvous.lieu}}</td>
					<td>
						<a href="{{path('app_delete',{id:rendezvous.id} )}}">delete</a>
					</td>
					<td>
						<a href=" {{path('app_rendez_vous',{id:rendezvous.id} )}}  ">edit</a>
					</td>
				</tr>
			</tr>

		</tbody>
	{% endfor %}
</tbody></table>{% endblock %}
