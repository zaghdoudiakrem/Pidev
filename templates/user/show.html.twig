{% extends 'base2.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container" style="width:40%;">
    <h1 style="color: #012970;font-family: "Nunito", sans-serif;} text-align:center;" >Liste des Utlisateurs </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.adresse }}</td>
            </tr>
            <tr>
                <th>Cin</th>
                <td>{{ user.cin }}</td>
            </tr>
            <tr>
                <th>Num_tel</th>
                <td>{{ user.numTel }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}"> <button  class="btn btn-outline-info float-right my-3">retour </button></a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}"><button  class="btn btn-outline-success my-3">Modifier</button></a>

    {{ include('user/_delete_form.html.twig') }}</div>
{% endblock %}
